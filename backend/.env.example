# Server Configuration
PORT=3001
NODE_ENV=development

# Powergate Configuration
POWERGATE_HOST=http://localhost:6002
POWERGATE_USER_TOKEN=your_powergate_user_token_here
POWERGATE_DEBUG=true

# Veramo Configuration
VERAMO_SECRET_KEY=your_veramo_secret_key_here_change_in_production
INFURA_PROJECT_ID=your_infura_project_id_here

# Enhanced AI Configuration
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# Blockchain Configuration
FLOW_ACCESS_NODE=https://rest-testnet.onflow.org
FLOW_WALLET_DISCOVERY=https://fcl-discovery.onflow.org/testnet/authn
FLOW_CONTRACT_ADDRESS=0x1234567890abcdef

NEAR_NETWORK_ID=testnet
NEAR_NODE_URL=https://rpc.testnet.near.org
NEAR_WALLET_URL=https://wallet.testnet.near.org
NEAR_DID_CONTRACT_ID=did-registry.testnet

# Dataverse Configuration
DATAVERSE_API_URL=https://demo.dataverse.org
DATAVERSE_API_KEY=your_dataverse_api_key_here

# OriginTrail DKG Configuration
ORIGINTRAIL_NODE_URL=https://lofar-testnet.origin-trail.network
ORIGINTRAIL_API_KEY=your_origintrail_api_key_here
DKG_NODE_URL=https://api.origintrail.network
DKG_PRIVATE_KEY=your_dkg_private_key_here
DKG_PUBLIC_KEY=your_dkg_public_key_here

# AI/LangChain Configuration
OPENAI_API_KEY=your_openai_api_key_here
LANGCHAIN_API_KEY=your_langchain_api_key_here

# Database Configuration
DATABASE_URL=postgresql://helixid:helixid_password@localhost:5432/helixid

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=100MB
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/helixid-backend.log

# Cultural Heritage & GDPR
ENABLE_CULTURAL_HERITAGE=true
GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=2555
